<div class="row">
  <h2 class="text-center">Foods you have logged</h1>
</div>

<%= form_tag(foods_path, :method => 'get') do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag('Search', :name => nil) %>
  </p>
  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>
<% end %>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
    <table class="table table-striped">
      <th><%= sortable "time_consumed" %></th>
      <th><%= sortable "type_id", "Type of Meal" %></th>
      <th><%= sortable "category_id", "Food Category" %></th>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.time_consumed %></td>
          <td><%= food.type.name.titleize %></td>
          <td><%= food.category.name.titleize %></td>
        </tr>
      <% end %>
    </table>
    <%= will_paginate @foods %>
  </div>
</div>
