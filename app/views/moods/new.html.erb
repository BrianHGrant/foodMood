<div class="row clearfix">
  <div class="col-sm-12 form_for_foods">
    <%= form_for @mood do |f| %>

      <div class="form-group">
        <%= f.label "Time Consumed" %>
        <%= f.datetime_select :time%>
      </div>

      <div class="form-group">
        <%= f.label "Mood Level" %>
        <%= f.number_field :level, min:1, max:10%>
      </div>

      <%= f.submit :class => "btn btn-default" %>
    <% end %>
  </div>
</div>
